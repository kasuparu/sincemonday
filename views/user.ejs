<% include header %>
	<div class="row-fluid">
		<div class="span12">
			<p class="lead">
				<% if (owner) { %>
					<%= owner.logged_in %>
				<% } else { %>
					Пользователь не найден.
				<% } %>
			</p>
		</div>
	</div>
	<div class="container-fluid counter-container" id="countercontainer">
	</div>
				<script type="text/javascript">
					<% if (owner) { %>
					 timerList('<%= htmlEntities(owner.logged_in) %>','#countercontainer');
					 <% } %>
				</script>

<% if (!user) { %>
	<div class="row-fluid">
		<div class="span12">
			<center>
				Чтобы создать свой таймер, нажмите <a href="/auth/twitter"><img src="https://si0.twimg.com/images/dev/buttons/sign-in-with-twitter-l.png" /></a> и следите за тем, сколько времени прошло с вашего личного понедельника.
			</center>
		</div>
	</div>
<% } else if (user && user.id && owner && owner.id == user.id) { %>
	<div class="container-fluid counter-container" id="friendcountercontainer">
	</div>
				<script type="text/javascript">
					 timerListFriends('<%= htmlEntities(owner.logged_in) %>','#friendcountercontainer');
				</script>
<% } %>

<% include footer %> 
