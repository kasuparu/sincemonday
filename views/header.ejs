<body data-spy="scroll" ng-controller="appDataController" ng-init="init({siteName: '<%= siteName %>'<% if (user && user.screen_name) { %>, screen_name:'<%=user.screen_name %>'<% } %>})"> 
<div id="menubar" class="navbar navbar-fixed-top" ng-controller="collapsibleMenuController">
	<div id="menubar_container" class="navbar-inner">
	<div class="container">
		<a class="btn btn-navbar" ng-click="isCollapsed = !isCollapsed">
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</a>
		<a class="brand" href="/"><%= siteName %></a>
<% 		if (user && user.screen_name) { %>
		<div class="btn-group pull-right">
			<a class="btn dropdown-toggle" href="#" data-toggle="dropdown">
				<i class="icon-user"></i>
				<%=htmlEntities(user.screen_name) %>
				<span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
				<li>
					<a href="#!/u/<%=htmlEntities(user.screen_name) %>">Профиль</a>
				</li>
				<li>
					<a href="#!/r/<%=htmlEntities(user.screen_name) %>">Взаимоотношения</a>
				</li>
				<li class="divider"></li>
				<li>
					<a href="/logout">Выход</a>
				</li>
			</ul>
		</div>
<%
		}
%>
		<div id="menubar_navigation" class="nav-collapse" collapse="isCollapsed" ng-controller="activePageController">
			<ul class="nav">
<% 		if (user && user.screen_name) { %>
				<li ng-class="{'active': getActivePage() == 'user'}">
					<a href="#!/u/<%=htmlEntities(user.screen_name) %>"><i class="icon-white icon-user"></i>
					<span class="hidden-desktop pull-right">
						<%=htmlEntities(user.screen_name) %>
					</span>
					</a>
				</li>
				
				<li ng-class="{'active': getActivePage() == 'relationships'}">
					<a href="#!/r/<%=htmlEntities(user.screen_name) %>"><i class="icon-white icon-list-alt"></i>
					<span class="hidden-desktop pull-right">
						Взаимоотношения
					</span>
					</a>
				</li>
<%
		}
%>
				<li ng-class="{'active': getActivePage() == 'about'}">
					<a href="/"><i class="icon-white icon-home"></i>
					<span class="hidden-desktop pull-right">
						<%= siteName %>
					</span>
					</a>
				</li>
			</ul>
		</div><!--/.nav-collapse -->


	</div>
	</div>
</div>
